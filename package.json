{
  "name": "launcher-bootstrap",
  "version": "1.1.6",
  "description": "Bootstrapper f√ºr den MyFTB Launcher",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "MyFTB",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@electron/remote": "^1.1.0",
    "arch": "^2.2.0",
    "electron-updater": "^4.3.8"
  },
  "devDependencies": {
    "electron": "^12.0.5",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "de.myftb.launcher-bootstrap",
    "productName": "MyFTBLauncher",
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      },
      "publish": {
        "provider": "generic",
        "url": "https://launcher.myftb.de/installer",
        "publishAutoUpdate": "true"
      },
      "publisherName": "MyFTB",
      "artifactName": "MyFTBLauncher.${ext}"
    },
    "nsis": {
      "allowElevation": false,
      "packElevateHelper": false,
      "shortcutName": "MyFTBLauncher",
      "uninstallDisplayName": "MyFTBLauncher"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.games",
      "publish": {
        "provider": "generic",
        "url": "https://launcher.myftb.de/installer",
        "publishAutoUpdate": "true"
      },
      "artifactName": "MyFTBLauncher.${ext}"
    },
    "dmg": {
      "title": "MyFTBLauncher",
      "backgroundColor": "#222"
    },
    "linux": {
      "target": "AppImage",
      "category": "Game",
      "artifactName": "MyFTBLauncher.${ext}",
      "publish": {
        "provider": "generic",
        "url": "https://launcher.myftb.de/installer",
        "publishAutoUpdate": "true"
      }
    }
  }
}
